#
# supervisor template
#

[program:{{ app }}]

command      = java -jar crypto-{{ app }}.jar
environment  = {% for k, v in env_vars.items() %}{{ k }}="{{ v }}",{% endfor %}LAST="END"
directory    = /srv/cryptoexchange/{{ app }}
user         = www-data
startsecs    = 10
startretries = 10

redirect_stderr         = true
stdout_logfile_maxbytes = 50MB
stdout_logfile_backups  = 10
stdout_logfile          = /var/log/supervisor/{{ app }}.log
